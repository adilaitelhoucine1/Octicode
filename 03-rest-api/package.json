{
  "name": "notes-summaries-api",
  "version": "1.0.0",
  "description": "REST API for managing patients, voice notes, and AI summaries",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": ["rest-api", "typescript", "express"],
  "author": "Adil",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "zod": "^3.22.4",
    "better-sqlite3": "^9.2.2",
    "pino": "^8.17.2",
    "pino-http": "^8.6.1",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.1.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "prettier": "^3.1.1"
  }
}
